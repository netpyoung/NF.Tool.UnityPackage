<UserControl xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="200"
			 xmlns:vm="using:UnityPackageGUI"
			 x:DataType="vm:Tab_Pack"
			 x:Class="UnityPackageGUI.Tab_Pack">
	<Border BorderThickness="2"
			CornerRadius="10"
			BorderBrush="Gray"
			Background="Transparent"
			Margin="5"
			Padding="5"
			HorizontalAlignment="Stretch"
			VerticalAlignment="Stretch"
			DragDrop.AllowDrop="True"
			DragDrop.DragOver="OnDragOver"
			DragDrop.Drop="OnDrop">
		<StackPanel Orientation="Vertical" Spacing="1">
			<Grid Margin="5"
				  ColumnDefinitions="Auto, *"
				  RowDefinitions="Auto, Auto, Auto">
				<Button Grid.Row="0" Content="Directory" Click="OnSearchPackageRootFolder"/>
				<TextBox Grid.Row="0" Grid.Column="1" Margin="5,5" Text="{Binding PackageRootDir, Mode=TwoWay}" MinWidth="200"/>
			</Grid>
			<Button HorizontalAlignment="Center" Content="Pack" Padding="10,5" Margin="10" Click="OnBtnPack" />
		</StackPanel>
	</Border>
</UserControl>
